
{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./lib",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": [
    "./node_modules/**/*"
  ]
}